pipeline {
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/AbhishekPattnaik04/Python-Terraform.git'
      }
    }
   stage('Terraform') {
      steps {
          dir("/var/lib/jenkins/workspace/Terraform-Python/Python/"){
               sh 'sudo python3 pythonscript.py --arg1 $input1 --arg2 $input2 --arg3 $input3'
          }
      }
    }
  }
}
